<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PutServletHere</servlet-name>
        <servlet-class>Controller.PutServletHere</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>Controller.EmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeAdd</servlet-name>
        <servlet-class>Controller.EmployeeAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>Controller.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveOrder</servlet-name>
        <servlet-class>Controller.SaveOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProduct</servlet-name>
        <servlet-class>Controller.SearchProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCartItem</servlet-name>
        <servlet-class>Controller.RemoveCartItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VNPayServlet</servlet-name>
        <servlet-class>Controller.VNPayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPassword</servlet-name>
        <servlet-class>Controller.NewPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewInfo</servlet-name>
        <servlet-class>Controller.NewInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AppPayServlet</servlet-name>
        <servlet-class>Controller.AppPayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorizePaymentServlet</servlet-name>
        <servlet-class>Controller.paypal.AuthorizePaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecutePaymentServlet</servlet-name>
        <servlet-class>Controller.paypal.ExecutePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PutServletHere</servlet-name>
        <url-pattern>/PutServletHere</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeAdd</servlet-name>
        <url-pattern>/EmployeeAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/CartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveOrder</servlet-name>
        <url-pattern>/SaveOrder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetPasswordController</servlet-name>
        <servlet-class>Controller.ForgetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/login-admin</url-pattern>
        <url-pattern>/login-employee</url-pattern>
        <url-pattern>/Dn-Dky-QMk/login</url-pattern>
        <url-pattern>/Dn-Dky-QMk/login-admin</url-pattern>
        <url-pattern>/Dn-Dky-QMk/login-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetPasswordController</servlet-name>
        <url-pattern>/forget-password</url-pattern>
        <url-pattern>/send-otp</url-pattern>
        <url-pattern>/check-otp</url-pattern>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/update-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProduct</servlet-name>
        <url-pattern>/SearchProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCartItem</servlet-name>
        <url-pattern>/RemoveCartItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VNPayServlet</servlet-name>
        <url-pattern>/VNPayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPassword</servlet-name>
        <url-pattern>/NewPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewInfo</servlet-name>
        <url-pattern>/NewInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AppPayServlet</servlet-name>
        <url-pattern>/AppPayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorizePaymentServlet</servlet-name>
        <url-pattern>/AuthorizePaymentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecutePaymentServlet</servlet-name>
        <url-pattern>/ExecutePaymentServlet</url-pattern>
    </servlet-mapping>

    <session-config>
	    <session-timeout>
	            30
	        </session-timeout>
		<cookie-config>
		    <http-only>true</http-only>
		    <secure>true</secure>
		</cookie-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>    
	<filter>  
	    <filter-name>SecurityFilter</filter-name>  
	    <filter-class>Security.SecurityFilter</filter-class>  
	</filter>  
	<filter-mapping>
	    <filter-name>SecurityFilter</filter-name>  
	    <url-pattern>/*</url-pattern>
	</filter-mapping>  
</web-app>
